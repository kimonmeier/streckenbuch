<MudTimelineItem Color="@Color">
    <ItemDot>
        <MudAvatar>
            <MudImage Src="images/kombiniert.png"></MudImage>
        </MudAvatar>
    </ItemDot>
    <ItemContent>

        @switch (Entry.SignalSeite)
        {
            case DisplaySeite.Einfahrt:
                <MudText Color="Color">
                    Einfahrt
                </MudText>
                break;
            case DisplaySeite.Einfahrt_Abschnitt:

                <MudText Color="Color">
                    Abschnitt Einfahrt
                </MudText>
                break;
            case DisplaySeite.Ausfahrt_Abschnitt:

                <MudText Color="Color">
                    Abschnitt Ausfahrt
                </MudText>
                break;
            case DisplaySeite.Ausfahrt:

                <MudText Color="Color">
                    Ausfahrtsignal
                </MudText>
                break;
        }
    </ItemContent>
    <ItemOpposite>
        @if (!string.IsNullOrEmpty(Entry.Kommentar))
        {
            <MudText Typo="Typo.subtitle1">
                @Entry.Kommentar
            </MudText>
        }
    </ItemOpposite>
</MudTimelineItem>

@code {
    [Parameter]
    public KombiniertSignalEntry Entry { get; set; } = null!;

    public Color Color
    {
        get
        {
            if (Entry is null)
            {
                return Color.Default;
            }

            switch (Entry.SignalSeite)
            {
                case DisplaySeite.Einfahrt:
                case DisplaySeite.Einfahrt_Abschnitt:
                    return Color.Success;
                case DisplaySeite.Ausfahrt_Abschnitt:
                case DisplaySeite.Ausfahrt:
                    return Color.Error;
            }

            return Color.Transparent;
        }
    }
}